rowFlexContainer()
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center
    align-items flex-start
    align-content flex-start
    box-sizing border-box
    width 100%
    height 100%

centerFlexContainer()
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center
    align-items center
    align-content center
    box-sizing border-box
    width 100%
    height 100%

leftBottomFlexContainer() 
    display flex
    flex-direction column
    flex-wrap wrap
    justify-content flex-end
    align-items flex-start
    align-content flex-end
    box-sizing border-box
    width 100%
    height 100%

betweenFlexContainer() 
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    align-items center
    align-content center
    box-sizing border-box
    width 100%
    height 100%

absoluteCenter() 
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 100%
    height 100%

borderRadius(n) 
    -webkit-border-radius n
    -moz-border-radius n
    border-radius n


bgImage() 
    background-repeat no-repeat
    background-size cover
    background-position 50% 50%

shadow(n) 
    box-shadow 0 n n 0 rgba(0, 0, 0, 0.15)

hr()
    margin 5px 0
    height 1px
    width 30%