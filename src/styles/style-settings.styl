fontTitle = 'Roboto', sans-serif
fontText = 'Roboto Slab', serif

glass(args...)
    background rgba(args)
    box-shadow inset 0 -1px 3px 1px rgba(#fff,0.3), 0 2px 3px 2px rgba(#000,0.15)

pressed-text(color,alpha)
    color transparent
    background-color color
    text-shadow 0px 1px 1px rgba(#fff,alpha)
    background-clip text
    -webkit-background-clip text
    -moz-background-clip text
