@import "src/styles/*"

* 
	font-size 14px
	color #444
	font-family 'Roboto Slab', serif
	letter-spacing 0.07em
	line-height 1.7em
*::selection 
	background transparent

a 
	text-decoration none
	color #47f
	&:hover 
		cursor pointer
		text-decoration underline
	&:active 
		color #36d

input,textarea
	background $bginp=#eaeaea
	border 1px solid #aaa
	font-size 16px
	padding 5px 10px 7px 10px
	letter-spacing 0.03em
	margin 2px 0 0 0
	box-shadow inset 0 -1px 0 0 #f5f5f5, 0 1px 3px 0 rgba(#000,0.15),inset 0 1px 3px rgba(#000,0.1)
	&:focus
		background lighten($bginp,80%)
	&::placeholder
		color #afafaf

	&::selection
		color #333
		background #aaa

input[type="button"],button
	border 1px solid #aaa
	background $bgbtn=#dfdfdf
	padding 5px 30px 5px 30px
	color #6f6f6f
	font-size 14px
	box-shadow inset 0 1px 0 0 #eee, 0 1px 3px 0 rgba(#000,0.15)
	letter-spacing 0.02em
	text-transform uppercase
	text-shadow 1px 1px 0 rgba(#f5f5f5,1)
	box-sizing border-box
	border-radius 2px
	&:hover
		background lighten($bgbtn,15%)
		cursor pointer
	&:disabled
		color #aaa
	&:active
		box-shadow inset 0 -1px 0 0 #f0f0f0, 0 1px 0 0 rgba(#000,0.15), inset 0 1px 1px rgba(#000,0.15)

body 
	overflow-x none
	overflow-y scroll

h1 
	font-family 'Roboto', sans-serif
	font-size 40px

h2 
	font-size 16px
	font-family 'Roboto', sans-serif

p 
	font-size 14px
	font-family 'Roboto Slab', serif

span 
	font-weight bold
	padding 0em 0.3em 0.2em 0.3em
	margin 0 0.1em 0 0.1em
	border-radius 0.3em
	
input.error
	// border 1px solid #f33
	box-shadow inset 0px 0 1px 0 #f00

$path='/assets/icons/'
$icons={
	chat:"comments-solid.svg"
}
.icon-button
	height 40px
	width 40px
	background-color #e7e7e7
	border 1px solid #ccc
	background-position 50% 50%
	background-repeat no-repeat
	background-size 70%
	box-shadow inset 0 1px 0 #f7f7f7
	border-radius 2px
	box-sizing border-box
	margin-left 1px
	&:hover
		background-color lighten(#e7e7e7,4)
		cursor pointer

.icon-bg-image-chat
	$a=$path + $icons.chat
	background-image url($a)
